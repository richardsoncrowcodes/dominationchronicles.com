layout: base.njk
---

<section class="py-5 mt-5">
    <div class="container pt-5">
        <div class="row g-5">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-2">{{ episode.title }}</h1>
                    {% if episode.description %}<h3>{{ episode.description | safe | md }}</h3>{% endif %}
    <p class="text-secondary small">{{ episode.publishDate  }}</p>
{% if episode.video %}
    <video controls class="w-100 mb-4 rounded shadow-md" poster="{{ episode.image }}">
        <source src="{{ episode.video }}" type="video/mp4"> 
        <source src="{{ episode.video }}" type="video/webm"> 
        Your browser not support video
    </video>
{% endif %}
    {% if episode.audio %}
        <audio controls class="w-100 mt-3">
            <source src="{{ episode.audio }}" type="audio/mpeg">
            Your browser not support audio
        </audio>
    {% endif %}
    
                {{ content | safe }}
                 <p>
                 URL: <a href="{{ episode.originalUrl }}" target="_blank" rel="noopener noreferrer">{{ episode.originalUrl }}</a>
            </p>
                {% include "partials/episodes/pagination.njk" %}
            </div>
            {% include "partials/sidebar.njk" %}
        </div>
    </div>
</section>



<article class="py-5 container mt-3">
<header class="text-center mb-5 mt-5">
    <h1 class="col-md-10 mx-auto">{{ episode.title }}</h1>
    {% if episode.description %}<h3>{{ episode.description }}</h3>{% endif %}
    <p class="text-secondary small">{{ episode.publishDate  }}</p>
{% if episode.video %}
    <video controls class="w-100 mb-4 rounded shadow-md" poster="{{ episode.image }}">
        <source src="{{ episode.video }}" type="video/mp4"> 
        <source src="{{ episode.video }}" type="video/webm"> 
        Your browser not support video
    </video>
{% endif %}
    {% if episode.audio %}
        <audio controls class="w-100 mt-3">
            <source src="{{ episode.audio }}" type="audio/mpeg">
            Your browser not support audio
        </audio>
    {% endif %}
</header>

<div class="row justify-content-center">
    <div class="col-md-8">
        <img 
            src="{{ episode.image }}" 
            alt="Cover Episode: {{ episode.title }}" 
            class="img-fluid rounded shadow mb-4"
            style="max-width: 100%; height: auto;"
        >
        
        <p>{{ episode.title }}</p>
        
        {% if episode.description %}
            <div class="episode-description mt-4 mb-4">
                <h3>{{ episode.description | safe | md }}</h3>
                <!--  tester data
                {{ episode.description | safe | md }}
                {{ episode.content | safe | md }}
                {{ episode.article | safe | md }}
                {{ episode.video | safe | md }}
            -->
            </div>
        {% endif %}

        <div class="mt-5">
            <p>
                 URL: <a href="{{ episode.originalUrl }}" target="_blank" rel="noopener noreferrer">{{ episode.originalUrl }}</a>
            </p>
        </div>

    </div>
</div>
</article>
---
layout: base.njk
---
    <section class="py-5 mt-5">
        <div class="container pt-5">
            
            <header class="text-center mb-5">
                <h1 class="display-4 fw-bold">{{title}}</h1> 
                <p class="lead text-secondary">{{description}}</p>
            </header>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    {{content|safe}}
                    <div class="bg-dark-secondary p-5 rounded shadow-lg">
                        <h3>{{widget.form.title}}</h3>
                        <form action="{{widget.form.formspree_id}}" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" name="name" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" required>
                            </div>
                            <div class="mb-4">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" name="message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">{{widget.form.button}}</button>
                        </form>

                        <hr class="my-4 border-secondary">
                        <p class="text-center text-secondary">
                            {{widget.form.text|md|safe}}
                        </p>

                    </div>
                    </div>
            </div>
        </div>
    </section>
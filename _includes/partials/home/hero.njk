    <section id="hero" class="hero-area d-flex align-items-center mt-5">
        <div class="container mt-5">
            <div class="row align-items-center">
                <div class="col-lg-7 p-3 p-md-5 text-center text-lg-start">
                    <h1 class="display-3 fw-bold">{{title}}</h1>
                    <h2 class="display-5 text-accent mb-3">{{description}}</h2>
                    <p class="lead mb-4">{{content | safe }}</p>
                    <a href="{{button1.url}}" class="btn btn-primary btn-lg me-2 mt-1 mb-1">{{button1.text}}</a>
                    <a href="{{button2.url}}" class="btn btn-outline-light btn-lg mt-1 mb-1">{{button2.text}}</a>
                </div>
                <div class="col-lg-5 mt-5 mt-lg-0 p-3 p-md-5">
                    {% if image %}<img src="{{image}}" alt="{{title}}" class="img-fluid rounded-3" 
                    width="100%" height="100%" loading="eager">{% endif %}
                </div>
            </div>
        </div>
    </section>
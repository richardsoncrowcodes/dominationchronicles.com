<section id="episodes" class="py-5">
    <div class="container p-3 mb-3">
        <header class="text-center text-center p-3">
        <h2 class="display-6"><a href="{{page.url}}">{{widget.episode.title}}</a></h2>
        <p>{{widget.episode.text}}</p>
        </header>
        <div class="row g-4">
            {% for e in collections.episodes | limit(6) %}<div class="col-lg-4 col-md-6 p-1">
                <div class="card bg-dark-secondary h-100 border-0 shadow-sm">
                    {% if e.data.image %}
                        {% if loop.index0 == 0 %}
                            <img src="{{e.data.image}}"
                                 srcset="{{e.data.image}} 400w, {{e.data.image}} 800w" 
                                 sizes="(max-width: 768px) 400px, 800px"
                                 class="card-img-top"
                                 width="100%" height="100%" 
                                 alt="{{e.data.title}}" 
                                 fetchpriority="high">
                        {% else %}
                            <img src="/img/icon.webp" data-src="{{e.data.image}}" 
                                 data-srcset="{{e.data.image}} 400w, {{e.data.image}} 800w"
                                 data-sizes="(max-width: 768px) 400px, 800px"
                                 class="card-img-top lazy-load-image"
                                 width="100%" height="100%" alt="{{e.data.title}}" 
                                 loading="lazy">
                        {% endif %}
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title text-white">{{e.data.title}}</h3>
                        <p class="card-text text-white small">Duration: {{e.data.duration}}</p>
                        <a href="{{e.url}}" class="btn btn-primary mt-auto stretched-link">
                            {{widget.episode.button_episodes}}<i class="fas fa-circle-play ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>{% endfor %}
        </div>
    </div>
</section>
<section id="podcast-feed-latest" class="py-5 container p-3">
    <h2 class="display-6 text-center mb-4 bg-dark"><a href="{{page.url}}">{{ widget.rss.title }}</a></h2>
    <p class="text-center text-white mb-5">{{ widget.rss.text }}</p>

    <div id="podcast-feed-container row" class="instagram-grid"> 
{%- if podcast and podcast.length > 0 -%}
    {%- for episode in podcast | reverse -%}
    <div class="card bg-dark-secondary h-100 border-0 shadow-sm podcast-feed-item col-lg-10"><!-- changed col-md-4 to col-lg-10-->
        <a href="{{ episode.redcircleLink }}" target="_blank" rel="noopener noreferrer" title="{{ episode.title | escape }}">
            <picture>
            <source type="image/webp" 
                    data-srcset="{{ episode.image }} 400w, {{ episode.image }} 800w"
                    data-sizes="(max-width: 600px) 400px, 800px">            
            <img class="lazy-load-image card-img-top"
                 src="{{metadata.favicon}}" data-src="{{ episode.image }}"
                 data-srcset="{{ episode.image }} 400w, {{ episode.image }} 800w"
                 data-sizes="(max-width: 600px) 400px, 800px"
                 width="100%" height="100%"
                 alt="Podcast Episode: {{ episode.title | escape }}"
                 loading="lazy">
        </picture>
        <div class="card-body">
            <h3 class="lead">{{ episode.title }}</h3>
        </div>
        </a>
    </div>
    {%- endfor -%}
{%- else -%}
{%- endif -%}
</section>
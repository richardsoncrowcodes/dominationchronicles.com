<title>{{ title or metadata.title }}</title>
<meta name="title" content="{{ (title or metadata.title) | escape }}" />
<meta name="description" content="{{ (description or metadata.description) | escape }}" />
<meta name="referrer" content="strict-origin-when-cross-origin">
<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ (title or metadata.title) | escape }}" />
<meta property="og:site_name" content="{{ (title or metadata.title) | escape }}" />
<meta property="og:description" content="{{ (description or metadata.description) | escape }}" />
<meta property="og:image" content="{{metadata.url}}{{ metadata.opengraph or metadata.image or image }}" />
<meta property="og:locale" content="{{ metadata.locale }}" />
<meta name="facebook:image" content="{{metadata.url}}{{ metadata.opengraph or metadata.image or image }}" />
<meta property="facebook:description" content="{{ (description or metadata.description) | escape }}" />
<meta property="facebook:author" content="{{ metadata.metasocial.facebook }}" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="{{ (title or metadata.title) | escape }}" />
<meta name="twitter:description" content="{{ (description or metadata.description) | escape }}" />
<meta name="twitter:image" content="{{ metadata.url }}{{ metadata.opengraph or metadata.image or image }}" />
<meta property="twitter:author" content="{{ metadata.metasocial.twitteruser }}" />
<meta name="twitter:site" content="{{ metadata.metasocial.twitter }}" />

<!-- Dublin Core -->
<meta property="dc:title" content="{{ (title or metadata.title) | escape }}" />
<meta property="dc:creator" content="{{ metadata.author.name }}" />

<!-- Icons -->
<link rel="icon" type="image/x-icon" href="{{ metadata.favicon }}" />
<link rel="icon" type="image/png" sizes="96x96" href="/img/favicon/favicon-96x96.png" />
<link rel="icon" type="image/svg+xml" href="/img/favicon/favicon.svg" />
<link rel="shortcut icon" href="/img/favicon/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png" />
<meta name="apple-mobile-web-app-title" content="Domination Chronicles" />
<link rel="manifest" href="/img/favicon/site.webmanifest" />

<!-- Additional Meta -->
<meta name="fediverse:creator" content="@dominationchronicles@mastodon.social" />
<meta name="robots" content="index, follow" />
<link rel="canonical" href="{{ metadata.url }}{{ page.url }}" />
<meta name="language" content="{{ metadata.language }}" />
<meta name="locale" content="{{ metadata.locale }}" />
<meta name="generator" content="{{ eleventy.generator }}" />
<link rel="alternate" type="application/atom+xml" href="/feed/feed.xml" title="{{ metadata.title }}" />

<!-- Styles and Anchors -->
<style>
{% inlineCSS "css/index.css" %}
{% inlineCSS "css/style.css" %}
</style>
<script type="module">{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}</script>

<!-- Schema.org JSON-LD -->
{% include "partials/jsonld.njk" %}
{% if videoId %}
<div class="embed-container mb-5">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.css" />
    <script src="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.js" defer></script>
    <lite-youtube videoid="{{ videoId }}" 
        loading="lazy" 
        title="{{ title | escape }}"
        style="background-image: url('https://i.ytimg.com/vi/{{ videoId }}/hqdefault.jpg');" 
        {% if params %} params="{{ params }}"{% endif %}>
    </lite-youtube>
</div>
{% else %}
<a href="{{cover.url}}" title="Watch {{title}}" target="_blank"><img class="img-fluid rounded-3 shadow-sm mb-3" alt="{{title or metadata.title}}" 
width="100%" height="100%" src="{{ cover.image }}"/></a>
{% endif %}
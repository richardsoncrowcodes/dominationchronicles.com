        {% if sidebar.show_lastest_episode %}<div class="p-4 rounded shadow-sm mb-4 notes-card">
                        <h3 class="fw-bold mb-3">{{widget.episode.title}}</h3>
                        <p>{{widget.episode.text}}</p>
                {% for e in collections.episodes | limit(3) %}<div class="">
                    <div class="card bg-dark-secondary h-100 border-0 shadow-sm">
                        {% if e.data.image %}<img src="{{e.data.image}}" data-src="{{e.data.image}}" 
                        class="card-img-top lazy-load-image"
                        width="100%" height="100%" 
                        alt="{{e.data.title}}" loading="lazy"/>{% endif %}
                        <div class="card-body d-flex flex-column">
                            <p class="card-title text-white">{{e.data.title}}</p>
                            <a href="{{e.url}}" class="btn btn-outline-primary mt-auto stretched-link">
                                {{widget.episode.button_episodes}}<i class="fas fa-circle-play ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>{% endfor %}
                </div>{% endif %}
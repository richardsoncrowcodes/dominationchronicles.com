{% if subscribe and subscribe | length %}
<section class="subscribe-section headerpadding" aria-label="Subscribe links">
  <div class="subscribe-grid">
    {% for service in subscribe %}
      <article class="subscribe-card">
        <a class="subscribe-card__link" href="{{ service.link }}" target="_blank"
           rel="noopener noreferrer" title="Listen on {{ service.name }}">
          <img src="{{ service.icon }}" alt="Listen on {{ service.name }}" loading="lazy" decoding="async">
          <span>{{ service.name }}</span>
        </a>
      </article>
    {% endfor %}
  </div>
</section>
{% endif %}
